center-max-width = 960px
header-height = 51px

@import '../node_modules/jeet/stylus/jeet/index.styl'
@import '../node_modules/rupture/rupture/index.styl'
@import 'reset.css'
@import 'colors.styl'
@import 'fonts.styl'
@import 'glyphs.styl'
@import './component/video-details.styl'
@import './component/video-player.styl'
@import './component/now-feed.styl'
@import './component/playlist.styl'
@import './page/404.styl'
@import './page/browse.styl'
@import './page/home.styl'
@import './page/shows.styl'
@import './page/tv.styl'
@import './page/watch.styl'

//edit()

body,html
  padding 0
  margin 0
  background-color bg-color
  font-family: font-natl-regular

a
  cursor: pointer
  color: black
  text-decoration: none
  transition: color 0.1s ease-in-out
  &:hover
    text-decoration: none
    color: light-blue

header#nav
  position fixed
  height header-height
  z-index 100
  width 100%
  background-color header-color
  border-bottom solid 1px bg-color;
  .logo
    margin-top: 15px;
    background: url(/svg/logo.svg) no-repeat 0 0;
    float: left
    width: 87px
    height: header-height
  .profile
    float: right
  ul
    +below(500px)
      display none
    float: right
    margin: 0
    line-height: header-height
    color: #666

    li
      list-style-type: none
      margin-right: 30px
      float: left
      text-transform: uppercase

  font-family: font-natl-bold
  letter-spacing: 0.1em;
  text-align: center;
  > *
    text-transform: uppercase

footer#nav
  background-color #8f8c91
  color: #FFF
  font-size 15px
  width 100%
  padding-top:20px
  padding-bottom:75px

  a
    color: #FFF;
    transition: color 0.1s ease-in-out
    &:hover
      text-decoration: none
      color: light-blue

  ul
    padding-left 0
    display inline-block

  li
    list-style-type: none

  .socnet
    col(1/4)
  .sitemap
    col(1/4)
  .legal
    col(1/4)
  .lang
    col(1/4)
  .copyright
    col(1)

.container
  center(center-max-width, pad = 0)
  width: center-max-width

.page {
  padding-top: header-height;
}
