.now-feed-component
  padding-top: 30px
  column-count: 2
  column-gap: 30px
  .post
    background-color #FFF
    margin: 0 0 30px 0
    width: 100%

    display: inline-block
   	column-break-inside: avoid

    h2, p, .title
      padding: 0 20px

    h4
      float: left

    ul
      float: right
      padding-left 0
      display inline-block

    li
      float: left
      list-style-type: none
      a
        font-size: 1.3em
        padding-right: 5px

    img
      width: 100%

