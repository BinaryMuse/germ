.playlist-component
  overflow: auto
  height: 100%

  a
    color: white
  a:hover
    color: light-blue
  ul
    list-style-type: none
    padding: 10px
    margin 60px 0 0 0
  li
    padding: 10px 0
    border-bottom: solid 1px #444;

  img
    float: right
    height: 90px
    width: 120px

  .image
    cf()
    height: 90px
    display: block
    color: gray-light

  .title
    cf()
    display: block
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  .by
    display: block
    font-size: .7em
    line-height .7em
    color: gray-light
